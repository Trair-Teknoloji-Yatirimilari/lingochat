# Database
DATABASE_URL=postgresql://username@localhost:5432/lingochat

# Server
PORT=3000
NODE_ENV=development
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# OAuth (optional)
EXPO_PUBLIC_OAUTH_PORTAL_URL=
EXPO_PUBLIC_OAUTH_SERVER_URL=
EXPO_PUBLIC_APP_ID=lingochat-app
EXPO_PUBLIC_OWNER_OPEN_ID=
EXPO_PUBLIC_OWNER_NAME=

# API Base URL (optional - will use localhost for iOS/Android)
EXPO_PUBLIC_API_BASE_URL=

# OpenAI API (for translations)
OPENAI_API_KEY=your-openai-api-key

# Cloudinary (for media uploads)
CLOUDINARY_CLOUD_NAME=your-cloud-name
CLOUDINARY_API_KEY=your-api-key
CLOUDINARY_API_SECRET=your-api-secret

# SMS Provider Configuration
# Options: "console" (test mode), "twilio", "netgsm"
SMS_PROVIDER=console

# Twilio SMS (OTP verification)
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_VERIFY_SERVICE_SID=your-verify-service-sid

# NetGSM SMS (if using SMS_PROVIDER=netgsm)
NETGSM_USERNAME=your-netgsm-username
NETGSM_PASSWORD=your-netgsm-password
NETGSM_HEADER=LINGOCHAT
